/// Binary search.
#include<iostream>
using namespace std;
int main()
{
    int a[]={1,2,3,4,5,6,7,8,9};
    int s,e,m,n;
    cout<<"Enter the number: ";
    cin>>n;
    s = 0;
    e = 8;
    m=(s+e)/2;
    while(s<=e)
    {
        if(a[m]==n)
        {
            cout<<"The value is found at "<<m;
            return 0;
        }
        else if(n<a[m])
        {
            e=m-1;
        }
        else
        {
            s=m+1;
        }
        m=(s+e)/2;
    }
    cout<<"The value is not found.";
    return 0;
}
