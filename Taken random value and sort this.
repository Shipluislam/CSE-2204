/// Taken random value and sort this.
#include<iostream>
#include<cstdlib>
using namespace std;
int main()
{
    int n,i,j,t,k;
    cout<<"Please enter the array range: ";
    cin>>n;
    int a[n];
    for(i=0; i<n; i++)
    {
        a[i]=rand()%1000;
    }
    cout<<"The random value is: ";
    for(j=0; j<n; j++)
    {
        cout<<a[j]<<" ";
    }
    for(i=1; i<n; i++)
    {
        t=a[i];
        j=i-1;
        while(j>=0 && t<a[j])
        {
            a[j+1]=a[j];
            j--;
        }
        a[j+1]=t;
    }
    cout<<endl<<endl;
    cout<<"After sorting: ";
    for(j=0; j<n; j++)
    {
        cout<<a[j]<<" ";
    }
    return 0;
}
